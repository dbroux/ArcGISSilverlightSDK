                                        <Storyboard>
                                            <ObjectAnimationUsingKeyFrames Duration="0" Storyboard.TargetProperty="Template" Storyboard.TargetName="ExpanderButton">
                                                <DiscreteObjectKeyFrame KeyTime="0" Value="{StaticResource ExpanderLeftHeaderTemplate}"/>
                                            </ObjectAnimationUsingKeyFrames>
                                            <ObjectAnimationUsingKeyFrames Duration="0" Storyboard.TargetProperty="(Grid.Column)" Storyboard.TargetName="ExpanderButton">
                                                <DiscreteObjectKeyFrame KeyTime="0" Value="1"/>
                                            </ObjectAnimationUsingKeyFrames>
                                            <ObjectAnimationUsingKeyFrames Duration="0" Storyboard.TargetProperty="(Grid.Row)" Storyboard.TargetName="ExpandSite">
                                                <DiscreteObjectKeyFrame KeyTime="0" Value="0"/>
                                            </ObjectAnimationUsingKeyFrames>
                                            <ObjectAnimationUsingKeyFrames Duration="0" Storyboard.TargetProperty="Height" Storyboard.TargetName="rd0">
                                                <DiscreteObjectKeyFrame KeyTime="0" Value="*"/>
                                            </ObjectAnimationUsingKeyFrames>
                                            <ObjectAnimationUsingKeyFrames Duration="0" Storyboard.TargetProperty="Width" Storyboard.TargetName="cd0">
                                                <DiscreteObjectKeyFrame KeyTime="0" Value="*"/>
                                            </ObjectAnimationUsingKeyFrames>
                                        </Storyboard>
                                    </VisualState>
                                    <VisualState x:Name="ExpandRight">
                                        <Storyboard>
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="Template" Storyboard.TargetName="ExpanderButton">
                                                <DiscreteObjectKeyFrame KeyTime="0" Value="{StaticResource ExpanderLeftHeaderTemplate}"/>
                                            </ObjectAnimationUsingKeyFrames>
                                            <ObjectAnimationUsingKeyFrames Duration="0" Storyboard.TargetProperty="(Grid.Row)" Storyboard.TargetName="ExpandSite">
                                                <DiscreteObjectKeyFrame KeyTime="0" Value="0"/>
                                            </ObjectAnimationUsingKeyFrames>
                                            <ObjectAnimationUsingKeyFrames Duration="0" Storyboard.TargetProperty="(Grid.Column)" Storyboard.TargetName="ExpandSite">
                                                <DiscreteObjectKeyFrame KeyTime="0" Value="1"/>
                                            </ObjectAnimationUsingKeyFrames>
                                            <ObjectAnimationUsingKeyFrames Duration="0" Storyboard.TargetProperty="Height" Storyboard.TargetName="rd0">
                                                <DiscreteObjectKeyFrame KeyTime="0" Value="*"/>
                                            </ObjectAnimationUsingKeyFrames>
                                            <ObjectAnimationUsingKeyFrames Duration="0" Storyboard.TargetProperty="Width" Storyboard.TargetName="cd1">
                                                <DiscreteObjectKeyFrame KeyTime="0" Value="*"/>
                                            </ObjectAnimationUsingKeyFrames>
                                        </Storyboard>
                                    </VisualState>
                                </VisualStateGroup>
                            </VisualStateManager.VisualStateGroups>
                            <Border x:Name="Background" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" Background="{TemplateBinding Background}" CornerRadius="3">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition x:Name="cd0" Width="Auto"/>
                                        <ColumnDefinition x:Name="cd1" Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition x:Name="rd0" Height="Auto"/>
                                        <RowDefinition x:Name="rd1" Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <ToggleButton x:Name="ExpanderButton" 
										BorderBrush="{StaticResource GreenColorBrush}" 
										ContentTemplate="{TemplateBinding HeaderTemplate}" 
										Content="{TemplateBinding Header}" 
										Grid.Column="0" 
										Foreground="{TemplateBinding Foreground}" 
										FontWeight="{TemplateBinding FontWeight}" 
										FontStyle="{TemplateBinding FontStyle}" 
										FontStretch="{TemplateBinding FontStretch}" 
										FontSize="{TemplateBinding FontSize}"
										FontFamily="{TemplateBinding FontFamily}" 
										HorizontalContentAlignment="{TemplateBinding HorizontalContentAlignment}" 
										IsChecked="{TemplateBinding IsExpanded}" 
										Margin="1" 
										MinWidth="0" 
										MinHeight="0" 
										Padding="{TemplateBinding Padding}"
										Grid.Row="0" 
										Template="{StaticResource ExpanderDownHeaderTemplate}" 
										VerticalContentAlignment="{TemplateBinding VerticalContentAlignment}" 
										Background="#FF21531F">
                                    </ToggleButton>
                                    <ContentControl x:Name="ExpandSite" ContentTemplate="{TemplateBinding ContentTemplate}" Content="{TemplateBinding Content}" Grid.Column="0" Foreground="{TemplateBinding Foreground}" FontWeight="{TemplateBinding FontWeight}" FontStyle="{TemplateBinding FontStyle}" FontStretch="{TemplateBinding FontStretch}" FontSize="{TemplateBinding FontSize}" FontFamily="{TemplateBinding FontFamily}" HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" HorizontalContentAlignment="{TemplateBinding HorizontalContentAlignment}" Margin="{TemplateBinding Padding}" Grid.Row="1" Visibility="Collapsed" VerticalAlignment="{TemplateBinding VerticalContentAlignment}" VerticalContentAlignment="{TemplateBinding VerticalContentAlignment}"/>
                                </Grid>
                            </Border>
                            <Border x:Name="DisabledVisualElement" Background="#A5FFFFFF" CornerRadius="3" IsHitTestVisible="false" Opacity="0"/>
                            <Border x:Name="FocusVisualElement" 
								BorderBrush="{StaticResource GreenColorBrush}" 
								BorderThickness="1" 
								CornerRadius="3" 
								IsHitTestVisible="false" 
								Visibility="Collapsed" />
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Sample Description RichTextBox -->
        <Style x:Key="ReadOnlyTextBoxStyle" TargetType="TextBox">
            <Setter Property="FontSize" Value="16" />
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="#FFFFFFFF"/>
            <Setter Property="Foreground" Value="#FF000000"/>
            <Setter Property="Padding" Value="2"/>
            <Setter Property="BorderBrush">
                <Setter.Value>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FFA3AEB9" Offset="0"/>
                        <GradientStop Color="#FF8399A9" Offset="0.375"/>
                        <GradientStop Color="#FF718597" Offset="0.375"/>
                        <GradientStop Color="#FF617584" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Grid x:Name="RootElement">
                            <VisualStateManager.VisualStateGroups>
                                <VisualStateGroup x:Name="CommonStates">
                                    <VisualState x:Name="Normal"/>
                                    <VisualState x:Name="MouseOver">
                                        <Storyboard>
                                            <ColorAnimation Duration="0" To="#FF99C1E2" Storyboard.TargetProperty="(Border.BorderBrush).(SolidColorBrush.Color)" Storyboard.TargetName="MouseOverBorder"/>
                                        </Storyboard>
                                    </VisualState>
                                    <VisualState x:Name="Disabled"/>
                                    <VisualState x:Name="ReadOnly" />
                                </VisualStateGroup>
                                <VisualStateGroup x:Name="FocusStates">
                                    <VisualState x:Name="Focused"/>
                                    <VisualState x:Name="Unfocused"/>
                                </VisualStateGroup>
                                <VisualStateGroup x:Name="ValidationStates">
                                    <VisualState x:Name="Valid"/>
                                    <VisualState x:Name="InvalidUnfocused"/>
                                    <VisualState x:Name="InvalidFocused"/>
                                </VisualStateGroup>
                            </VisualStateManager.VisualStateGroups>
                            <Border x:Name="Border" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" Background="{TemplateBinding Background}" CornerRadius="1" Opacity="1">
                                <Grid>
                                    <Border x:Name="ReadOnlyVisualElement" Background="#5EC9C9C9" Opacity="0"/>
                                    <Border x:Name="MouseOverBorder" BorderBrush="Transparent" BorderThickness="1">
                                        <ScrollViewer x:Name="ContentElement" BorderThickness="0" IsTabStop="False" Padding="{TemplateBinding Padding}"/>
                                    </Border>
                                </Grid>
                            </Border>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </UserControl.Resources>
    <Grid x:Name="LayoutRoot">

        <Grid.Resources>
            <common:HierarchicalDataTemplate x:Key="categoryItem" >
                <StackPanel Orientation="Horizontal">
                    <Image Margin="0 0 2 0" Source="{Binding Icon}" Width="16" Height="16" />
                    <TextBlock Text="{Binding ID}" VerticalAlignment="Center" />
                </StackPanel>
            </common:HierarchicalDataTemplate>
            <common:HierarchicalDataTemplate x:Key="categoryEntry" ItemsSource="{Binding CategoryItems}" ItemTemplate="{StaticResource categoryItem}">
                <StackPanel Orientation="Horizontal">
                    <Image Margin="0 2 4 0" Source="{Binding Icon}" Width="12" Height="12" />
                    <TextBlock FontWeight="Bold" Text="{Binding Name}" VerticalAlignment="Center"/>
                </StackPanel>
            </common:HierarchicalDataTemplate>
        </Grid.Resources>

        <Grid.ColumnDefinitions>
            <ColumnDefinition MinWidth="100" MaxWidth="350" Width="290"/>
            <ColumnDefinition MinWidth="500" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition MaxHeight="75" Height="75" />
            <RowDefinition MinHeight="300" Height="*" />
        </Grid.RowDefinitions>

        <!-- Side Panel-->
        <Border x:Name="sideBar" Background="{StaticResource PanelGradient}" Grid.Row="1" Grid.Column="0" Margin="5,5,5,15" BorderBrush="#FF323232" BorderThickness="1" CornerRadius="10"  Opacity="1"  >
            <Border.Effect>
                <DropShadowEffect/>
            </Border.Effect>
            <ScrollViewer x:Name="ListScroller" Margin="10,16,10,5" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto"  
                          BorderBrush="Transparent" BorderThickness="0"  Style="{StaticResource SDKScrollViewerStyle}" >
                <StackPanel x:Name="ListOfSamples" Orientation="Vertical" />
            </ScrollViewer>
        </Border>
        <TextBlock FontSize="11" Margin="27,12,0,0" Grid.Row="1" Grid.Column="0" Width="250" Height="16" HorizontalAlignment="Left" VerticalAlignment="Top" Foreground="#FFF9F9F9" >
        	<TextBlock.Effect>
        		<DropShadowEffect ShadowDepth="2" BlurRadius="3"/>
        	</TextBlock.Effect>
                <TextBlock.Text>What do you want to explore?</TextBlock.Text>
        </TextBlock>

        <!-- Grid Splitter-->
        <basics:GridSplitter x:Name="gridSplitter" Grid.Column="0" Grid.Row="1" 
            VerticalAlignment="Stretch" Background="{x:Null}" Width="5" BorderBrush="DarkGray" Foreground="#FF212121"  />

        <!-- Main Panel -->
        <Border Grid.Row="1" Grid.Column="1" Margin="5,5,5,15" BorderBrush="#FF323232" BorderThickness="1" CornerRadius="10" 
                Background="{StaticResource PanelGradient}" Opacity="1" >
            <Border.Effect>
                <DropShadowEffect/>
            </Border.Effect>
            <basics:TabControl x:Name="tabPanel" Background="{x:Null}" BorderBrush="{x:Null}"  
            SelectionChanged="tabPanel_SelectionChanged" Margin="5,5,5,15" BorderThickness="1,1,1,1" FontSize="10" >
                <basics:TabControl.Resources>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0" x:Key="codeBackgroundBrush">
                        <GradientStop Color="#FFC8C8C8" Offset="1"/>
                        <GradientStop Color="White"/>
                        <GradientStop Color="White" Offset="0.345"/>
                    </LinearGradientBrush>
                </basics:TabControl.Resources>
                <basics:TabItem x:Name="tabSample" Header=" Live Sample " Style="{StaticResource SDKTabItemStyle}" >
                    <agssl:LogosFade />
                </basics:TabItem>
                <basics:TabItem x:Name="tabXaml" Header="     XAML    " Style="{StaticResource SDKTabItemStyle}" >
                    <ScrollViewer x:Name="tabXamlScrollView" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto"  
                                  BorderBrush="Transparent" BorderThickness="0" Style="{StaticResource SDKScrollViewerStyle}" 
                                  Background="{StaticResource codeBackgroundBrush}">
                        <syntax:SyntaxHighlightingTextBlock x:Name="txtXaml" SourceLanguage="Xaml" IsReadOnly="True"                                
								SelectionBackground="#560085FF" SelectionForeground="Transparent"
								HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
                    </ScrollViewer>
                </basics:TabItem>
                <basics:TabItem x:Name="tabSrc" Header=" Code Behind C#" Style="{StaticResource SDKTabItemStyle}">
                    <ScrollViewer x:Name="tabSrcScrollView" HorizontalScrollBarVisibility="Auto" Style="{StaticResource SDKScrollViewerStyle}"
                    VerticalScrollBarVisibility="Auto" Background="{StaticResource codeBackgroundBrush}">
                        <syntax:SyntaxHighlightingTextBlock x:Name="txtSrc" SourceLanguage="CSharp" IsReadOnly="True"
								SelectionBackground="#560085FF" SelectionForeground="Transparent"
								HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
                    </ScrollViewer>
                </basics:TabItem>
                <basics:TabItem x:Name="tabSrcVB" Header=" Code Behind VB" Style="{StaticResource SDKTabItemStyle}" Visibility="Collapsed"  > <!-- Modified to hide VB Tab-->
                    <ScrollViewer x:Name="tabSrcScrollViewVB" HorizontalScrollBarVisibility="Auto" Style="{StaticResource SDKScrollViewerStyle}"
                    VerticalScrollBarVisibility="Auto" Background="{StaticResource codeBackgroundBrush}">
                        <syntax:SyntaxHighlightingTextBlock x:Name="txtSrcVB" SourceLanguage="VisualBasic" IsReadOnly="True"
								SelectionBackground="#560085FF" SelectionForeground="Transparent"
								HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
                    </ScrollViewer>
                </basics:TabItem>
                <basics:TabItem x:Name="tabDesc" Header=" Description" Style="{StaticResource SDKTabItemStyle}" >
                    <ScrollViewer x:Name="tabDescScrollView" HorizontalScrollBarVisibility="Disabled" 
                        VerticalScrollBarVisibility="Auto" Background="#FFA7A7A7" BorderBrush="{x:Null}" >
                        <TextBox x:Name="txtDesc" IsReadOnly="True"  TextWrapping="Wrap" 
                                Style="{StaticResource ReadOnlyTextBoxStyle}" />
                    </ScrollViewer>
                </basics:TabItem>
            </basics:TabControl>
        </Border>

        <TextBlock x:Name="SampleCaption"  FontSize="8" Foreground="{StaticResource GlyphBrush}" Grid.Row="1" Grid.Column="1" 
                   HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="2,2,2,20" 
                   Text="ArcGIS API for Silverlight" />

        <StackPanel  Grid.Row="1" Grid.Column="1" Canvas.ZIndex="10" Orientation="Horizontal" HorizontalAlignment="Right" 
                     Margin="0,0,10,0" >
            <Button x:Name="copyToClipboard" Style="{StaticResource SDKButtonStyle}" BorderBrush="White" 
                Click="copyToClipboard_Click" VerticalAlignment="Top" HorizontalAlignment="Right"
                Content=" Copy to Clipboard " Margin="0,12,12,0" Foreground="White" Visibility="Collapsed" />
            <Button x:Name="downloadSDK"  Visibility="Collapsed" Style="{StaticResource SDKButtonStyle}" 
                VerticalAlignment="Top" HorizontalAlignment="Right" BorderBrush="White"
                Margin="0,12,25,0" Foreground="White" >
                <HyperlinkButton x:Name="ZipHyperlink" Foreground="White" Content=" Download SDK " 
                                     HorizontalAlignment="Center" VerticalAlignment="Center" 
                                     Style="{StaticResource GalleryHyperlinkButton}"  FontSize="11" />
            </Button>
        </StackPanel>

        <!-- Top Panel -->
        <Rectangle x:Name="TopRectangle" RadiusX="5" RadiusY="5" Margin="5,10,5,5" Stroke="#FF323232" Grid.ColumnSpan="2" Grid.Row="0" 
					Fill="{StaticResource GreenColorBrush}" IsHitTestVisible="False"/>

        <TextBlock x:Name="TopText" Margin="30,26,8,-8" RenderTransformOrigin="0.5,0.5" FontSize="24" FontStyle="Normal" FontWeight="Bold" 
                   MouseRightButtonUp="TopText_MouseRightButtonUp" MouseRightButtonDown="TopText_MouseRightButtonDown"
                   Text="ArcGIS API for Silverlight - Yet Another Interactive Samples" 
                   TextWrapping="NoWrap" 
                   Grid.ColumnSpan="2" Foreground="#FFFFFFFF">
    		 <TextBlock.Effect>
                <DropShadowEffect/>
             </TextBlock.Effect>
        </TextBlock>

    </Grid>
</UserControl>
