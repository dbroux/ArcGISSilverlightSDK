<UserControl x:Class="ArcGISSilverlightSDK.LogosFade"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    Loaded="UserControl_Loaded"
>
    <Grid x:Name="LayoutRoot" Background="White">
        <Grid x:Name="Logos" Width="auto" Height="auto" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="50" >
            
            <Grid.Resources>
                <Storyboard x:Name="slStoryboard" RepeatBehavior="10">
                    <DoubleAnimation
                        Storyboard.TargetName="esriLogoImage"
                        Storyboard.TargetProperty="Opacity"
                        From="1.0" To="0.0" Duration="0:0:10" 
                        AutoReverse="True" />
                    <DoubleAnimation
                        Storyboard.TargetName="slLogoImage"
                        Storyboard.TargetProperty="Opacity"
                        From="0.0" To="1.0" Duration="0:0:10" 
                        AutoReverse="True" />
                </Storyboard> 
            </Grid.Resources>
            
            <Image x:Name="slLogoImage" Source="/Assets/Images/image001_low.jpg" Stretch="None" 
                   HorizontalAlignment="Center" VerticalAlignment="Center" Opacity="0.0"  />

            <Image x:Name="esriLogoImage" Source="/Assets/Images/new_esri_logo.png" Stretch="None"  
                   HorizontalAlignment="Center" VerticalAlignment="Center" Opacity="1.0"   />
        </Grid>
       
    </Grid>
</UserControl>
